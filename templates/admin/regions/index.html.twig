{% extends './admin/adminbase.html.twig' %}

{% block body %}
<div class="row">
<div class="col-md-12 col-sm-12 ">
  <div class="x_panel">
    <div class="x_title">
      <h2>Régions</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li>
            <a href={{ path("app_admin_import_xlsx") }} title="Upload Excel" ><i class="fas fa-fw fa-file-excel-o text-success"></i></a>
        </li> 
        <li>
            <a href="{{ path('app_admin_regions_new') }}" title="Ajout region" ><i class="fas fa-fw fa-plus-circle"></i></a>
        </li> 
        <li>
            <a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box table-responsive">
            <p class="text-muted font-13 m-b-30">
              Liste des regions
            </p>
            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
              <thead>
                  <tr>
                      <th class="text-center">Id</th>
                      <th class="text-center">region</th>
                      <th class="text-center">Informations</th>
                  </tr>
              </thead>
              <tbody>
              {% for region in regions %}
                  <tr>
                      <td class="text-center">{{ region.id }}</td>
                      <td class="text-center">{{ region.nomRegion }}</td>
                      <td class="text-center">
                        <div class="row">
                            <div class="col-md-8 mx-auto">
                                <a href="{{ path('app_admin_regions_show', {'id': region.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                                <a href="{{ path('app_admin_regions_edit', {'id': region.id}) }}"><i class="fas fa-edit text-warning" title="Modifier"></i></a>
                            </div>
                        </div>
                      </td>
                  </tr>
              {% else %}
                  <tr>
                    <td class="text-center" colspan="3">
                        <a href="{{ path('app_admin_regions_new') }}" title="Ajout region" >Ajouter <i class="fas fa-fw fa-plus-circle"></i></a>
                    </td>
                  </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

{% endblock %}




