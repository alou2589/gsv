{% extends './admin/adminbase.html.twig' %}

{% block title %}Régions | {{ parent() }}{% endblock %}

{% block body %}
    <div class="x_panel">
      <div class="x_title">
        <h2>Régions</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
              <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li>
              <a href="{{ path('app_admin_regions_index') }}" title="Accueil Région" ><i class="fas fa-fw fa-home"></i></a>
          </li>
          <li>
              <a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="row">
          <div class="col-md-6 col-sm-10 mx-auto">
            {{form_start(form, {'attr':{'class':'form'}})}}
              <div class="form-floating mb-3">
                {{form_row(form.nom_region, {'attr':{'class':"form-control", 'placeholder':"Région", 'required':"required", 'autofocus':"autofocus"}})}}
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-success">Valider <i class="fas fa-save"></i> </button>
              </div>
            {{ form_end(form) }}
          </div>
          <div class="col-md-6 col-sm-10 mx-auto">
            <form method="post" action={{ path("app_admin_import_xlsx") }} >
              <input type="file" name="nom_region" class="btn btn-primary" /><br>
              <button type="submit" class="btn btn-success">Importer</button>
            </form>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
