{% extends './admin/adminbase.html.twig' %}

{% block title %}Statut | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2 class="text-success">Statut</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_affectation_new') }}" title="Ajout Statut" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des statuts
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Volontaire</th>
                            <th class="text-center">Service</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for affectation in affectations %}
                      <tr>
                        <td class="text-center">{{ affectation.id }}</td>
                        <td class="text-center">{{affectation.volontaireStatut.volontaire.prenom}} {{ affectation.volontaireStatut.volontaire.nom}} {{ affectation.volontaireStatut.matricule}} </td>
                        <td class="text-center">{{affectation.serviceDepartemental.nomSdc}}</td>
                        <td class="text-center">
                            <div class="row">
                              <div class="col-sm-6 mx-auto">
                                <a href="{{ path('app_admin_affectation_show', {'id': affectation.id}) }}"><i class="fas fa-eye text-info" title="DÃ©tails"></i></a>
                                <a href="{{ path('app_admin_affectation_edit', {'id': affectation.id}) }}"><i class="fas fa-edit text-warning" title="Modifier"></i></a>
                              </div>
                            </div>
                        </td>
                      </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="5">
                            <a href="{{ path('app_admin_affectation_new') }}" title="Ajout Affectation" >Ajouter <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
