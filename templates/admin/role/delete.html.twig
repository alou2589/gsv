<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h2 class="modal-title" id="myModalLabel2">Confirmation de la suppression</h2>
        <button type="button" class="close" data-dilgiss="modal" aria-label="Close"><span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Supprimer  <strong class="text-danger"> {{role.nomRole}} </strong>  ?</p>
        <form method="post" action="{{ path('app_admin_role_delete', {'id': role.id}) }}" onsubmit="return confirm(Êtes-vous sûr de vouloir effectuer cette action ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
            <a href="{{ path('app_admin_role_show', {'id':role.id}) }}" class="btn btn-secondary">Annuler <i class="fas fa-times"></i></a>
            <button class="btn btn-danger">Supprimer <i class="fas fa-trash-alt"></i></button>
        </form>
      </div>
    </div>
  </div>
</div>