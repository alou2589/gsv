{% extends './admin/adminbase.html.twig' %}

{% block title %} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2 class="text-success">Bilan Volontaire</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-md-8 mx-auto">
                {% include "./admin/bilan_volontaire/bilan_periodique.html.twig" %}
              </div>
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des bilans
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Volontaire</th>
                            <th class="text-center">Nombre de jours Ouvrables</th>
                            <th class="text-center">Taux de Pr√©sence</th>
                            <th class="text-center">Taux d'Absence</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for bilan in bilans %}
                      <tr>
                        <td class="text-center">{{ dump(bilan) }}</td>
                        <td class="text-center">{{bilan.total}}</td>
                        <td class="text-center">{{bilan.taux_presence|round(2)}}</td>
                        <td class="text-center">{{bilan.taux_absence|round(2)}}</td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
