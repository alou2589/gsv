
<div class="row">
    <div class="col-md-8 mx-auto">
        {% if feuille_presence.Active == true %}
            {% include "./admin/fp/emarger.html.twig" %}
        {% else %}
            <h2 class="text-center">La feuille de présence est clôturée  <i class="fas fa-lock text-danger"></i> </h2>
        {% endif %}
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-12 mx-auto">
        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">Volontaire</th>
                    <th class="text-center">Présence</th>
                    <th class="text-center">Heure</th>
                    <th class="text-center">Information</th>
                </tr>
            </thead>
            <tbody>
                {% for emargement in feuille_presence.emargements %}
                    <tr>
                        <td class="text-center">
                            {{emargement.affectation.VolontaireStatut.Volontaire.prenom}} {{emargement.affectation.VolontaireStatut.Volontaire.nom}} {{emargement.affectation.VolontaireStatut.matricule}}        
                        </td>
                        <td class="text-center">{{ emargement.etatTp.nomEtatTp }}</td>
                        <td class="text-center">{{ emargement.heure ? emargement.heure|date('h-m-s') : '' }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_admin_emargement_show', {'id': emargement.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                      <td class="text-center" colspan="4">
                        Pas de données
                      </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    
    </div>
</div>