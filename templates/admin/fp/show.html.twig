{% extends './admin/adminbase.html.twig' %}

{% block title %}Feuille Présence | {{ parent() }}{% endblock %}

{% block body %}
<div class="">
    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-bars"></i> Feuille Présence </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                        {% include "./admin/fp/delete.html.twig" %}
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_fp_edit', {'id': feuille_presence.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_fp_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fas fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Informations</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Émargement</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                <p><strong>Numéro Feuille</strong>: {{ feuille_presence.numeroFeuille}}</p>
                            </div>
                            <div class="col-md-3 text-center">
                                <p><strong>Service</strong>: {{ feuille_presence.serviceDepartemental.nomSdc }}</p>
                            </div>
                            <div class="lcol-md-3 text-center">
                                <p><strong>Opérateur</strong>: {{ feuille_presence.operateur.email }}</p>
                            </div>
                            <div class="col-md-3 text-center">
                                <p><strong>Date </strong>: {{feuille_presence.DateFeuille ? feuille_presence.DateFeuille|date('h:m:s'):' '}}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-12">
                                {% include "./admin/fp/emargement.html.twig" %}
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        {#% include "./admin/fp/emargement.html.twig" %#}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
{% endblock %}
