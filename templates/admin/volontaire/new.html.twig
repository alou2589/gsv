{% extends './admin/adminbase.html.twig' %}

{% block title %}Comptes Utilisateurs | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Comptes Utilisateur</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_volontaire_index') }}" title="Accueil Utilisateur" ><i class="fas fa-fw fa-home"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                          {{form_start(form, {'attr':{'class':'form'}})}}
                            <div class="form-floating mb-3">
                                {{form_row(form.prenom, {'label':'Prénom','attr':{'class':"form-control",'placeholder':"Prénom", 'required':"required"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.nom, {'attr':{'class':"form-control", 'placeholder':"Nom", 'required':"required"}})}}
                            </div>
                            <div class="form-floating mb-3">
                                {{form_row(form.genre, {'attr':{'class':"form-control",'placeholder':"Genre", 'required':"required"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.date_naissance, {'label': 'Date de naissance','attr':{'class':"form-control js-datepicker", 'placeholder':"Date de naissance", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.lieu_naissance, {'label':'Lieu de naissance','attr':{'class':"form-control", 'placeholder':"Lieu de Naissance", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.numero_cin, {'label':'Numéro CIN','attr':{'class':"form-control", 'placeholder':"Numéro Carte d'Identité Nationale", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.adresse, {'label':'Adresse','attr':{'class':"form-control", 'placeholder':"Adresse", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.telephone, {'label':'Téléphone','attr':{'class':"form-control", 'placeholder':"Téléphone", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-group">
                              <button type="submit" class="btn btn-success">Valider <i class="fas fa-save"></i> </button>
                            </div>
                          {{ form_end(form) }}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
