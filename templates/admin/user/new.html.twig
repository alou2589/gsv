{% extends './admin/adminbase.html.twig' %}

{% block title %}Comptes Utilisateurs | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2>Comptes Utilisateur</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_user_index') }}" title="Accueil Utilisateur" ><i class="fas fa-fw fa-home"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                          {{form_start(form, {'attr':{'class':'form'}})}}
                            <div class="form-floating mb-3">
                                {{form_row(form.prenom, {'attr':{'class':"form-control",'placeholder':"Pr√©nom", 'required':"required"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.nom, {'attr':{'class':"form-control", 'placeholder':"Nom", 'required':"required"}})}}
                            </div>
                            <div class="form-floating mb-3">
                                {{form_row(form.matricule, {'attr':{'class':"form-control",'placeholder':"Matricule", 'required':"required"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.pseudo, {'label': 'Pseudo','attr':{'class':"form-control", 'placeholder':"Pseudo", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-floating mb-3">
                              {{form_row(form.email, {'attr':{'class':"form-control", 'placeholder':"Email", 'required':"required", 'autofocus':"autofocus"}})}}
                            </div>
                            <div class="form-floating mb-3">
                                {{form_row(form.roles, {'attr':{'class':"form-control js-example-basic-multiple js-states",'id':'id_label_multiple' ,'required':"required"}})}}
                            </div>
                            <div class="form-group">
                              <button type="submit" class="btn btn-success">Valider <i class="fas fa-save"></i> </button>
                            </div>
                          {{ form_end(form) }}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
