{% extends './admin/adminbase.html.twig' %}

{% block body %}
<div class="row">
<div class="col-md-12 col-sm-12 ">
  <div class="x_panel">
    <div class="x_title">
      <h2>Emargement</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li>
            <a href="#" title="Upload Excel" ><i class="fas fa-fw fa-file-excel-o text-success"></i></a>
        </li> 
        <li>
            <a href="{{ path('app_admin_emargement_new') }}" title="Ajout Emargement" ><i class="fas fa-fw fa-plus-circle"></i></a>
        </li> 
        <li>
            <a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box table-responsive">
            <p class="text-muted font-13 m-b-30">
              Liste des Emargement
            </p>
            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
              <thead>
                  <tr>
                      <th class="text-center">Id</th>
                      <th class="text-center">Numéro</th>
                      <th class="text-center">Volontaire</th>
                      <th class="text-center">Présence</th>
                      <th class="text-center">Informations</th>
                  </tr>
              </thead>
              <tbody>
              {% for emargement in emargements %}
                  <tr>
                    <td class="text-center">{{ emargement.id }}</td>
                    <td class="text-center">{{ emargement.feuille.numeroFeuille }}</td>
                    <td class="text-center">
                        {{ emargement.affectation.volontaireStatut.volontaire.prenom }} {{ emargement.affectation.volontaireStatut.volontaire.nom }}
                    </td>
                    <td class="text-center">{{ emargement.etatTP.nomEtatTp }}</td>
                    <td class="text-center">
                      <div class="row">
                          <div class="col-md-8 mx-auto">
                              <a href="{{ path('app_admin_emargement_show', {'id': emargement.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                              <a href="{{ path('app_admin_emargement_edit', {'id': emargement.id}) }}"><i class="fas fa-edit text-warning" title="Modifier"></i></a>
                          </div>
                      </div>
                    </td>
                  </tr>
              {% else %}
                  <tr>
                    <td class="text-center" colspan="5">
                        <a href="{{ path('app_admin_emargement_new') }}" title="Ajout Emargement" >Ajouter <i class="fas fa-fw fa-plus-circle"></i></a>
                    </td>
                  </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

{% endblock %}




