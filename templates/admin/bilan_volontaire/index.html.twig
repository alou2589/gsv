{% extends './admin/adminbase.html.twig' %}

{% block title %}Bilan Volontaire | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
          <div class="x_title">
            <h2 class="text-success">Bilan Volontaire</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li>
                  <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li>
                  <a href="#" title="Filtre" ><i class="fas fa-fw fa-filter text-primary"></i></a>
              </li>
              <li>
                  <a href="{{ path('app_admin_bilan_volontaire_new') }}" title="Ajout Statut" ><i class="fas fa-fw fa-plus-circle"></i></a>
              </li>
              <li>
                  <a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="row">
              <div class="col-sm-12">
                <div class="card-box table-responsive">
                  <p class="text-muted font-13 m-b-30">
                    Liste des bilans
                  </p>
                  <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">Volontaire</th>
                            <th class="text-center">Mois</th>
                            <th class="text-center">Nombre de jours Ouvrables</th>
                            <th class="text-center">Nombre de jours de Présence</th>
                            <th class="text-center">Nombre de jour d'Absence</th>
                            <th class="text-center">Information</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for bilan_volontaire in bilan_volontaires %}
                      <tr>
                        <td class="text-center">{{ bilan_volontaire.affectation.volontaireStatut.volontaire.prenom }} {{ bilan_volontaire.affectation.volontaireStatut.volontaire.nom }}</td>
                        <td class="text-center">{{bilan_volontaire.mois}}</td>
                        <td class="text-center">{{bilan_volontaire.nbjoursOuvrables}}</td>
                        <td class="text-center">{{bilan_volontaire.nbjourPresence}}</td>
                        <td class="text-center">{{bilan_volontaire.nbjourAbsence}} </td>
                        <td class="text-center">
                            <div class="row">
                              <div class="col-sm-6 mx-auto">
                                <a href="{{ path('app_admin_bilan_volontaire_show', {'id': bilan_volontaire.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                                <a href="{{ path('app_admin_bilan_volontaire_edit', {'id': bilan_volontaire.id}) }}"><i class="fas fa-edit text-warning" title="Modifier"></i></a>
                              </div>
                            </div>
                        </td>
                      </tr>
                    {% else %}
                        <tr>
                          <td class="text-center" colspan="6">
                            <a href="{{ path('app_admin_bilan_volontaire_new') }}" title="Ajout Bilan Volontaire" >Ajouter <i class="fas fa-fw fa-plus-circle"></i></a>
                          </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
