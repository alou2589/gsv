{% extends './admin/adminbase.html.twig' %}

{% block title %}Bilan Volontaire | {{ parent() }}{% endblock %}

{% block body %}
<div class="">
    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-bars"></i> Bilaan Volontaire </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                        {% include "./admin/bilan_volontaire/delete.html.twig" %}
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_bilan_volontaire_edit', {'id': bilan_volontaire.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_bilan_volontaire_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fas fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Informations</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Émargement</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <p><strong>Id</strong>: {{ bilan_volontaire.id }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Volontaire</strong>: {{ bilan_volontaire.affectation.volontaireStatut.volontaire.prenom }} {{ bilan_volontaire.affectation.volontaireStatut.volontaire.nom }}                                
                        </li>
                        <li class="list-group-item">
                            <p><strong>Matricule</strong>: {{ bilan_volontaire.affectation.volontaireStatut.matricule }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Mois</strong>: {{ bilan_volontaire.Mois }}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Nombre de Jours de Présence </strong>: {{bilan_volontaire.nbJourPresence}}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Nombre de Jours de d'Absence </strong>: {{bilan_volontaire.nbJourAbsence}}</p>
                        </li>
                        <li class="list-group-item">
                            <p><strong>Nombre de Jours Ouvrables </strong>: {{bilan_volontaire.nbJoursOuvrables}}</p>
                        </li>
                    </ul>    
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        {#% include "./admin/fp/bilan_volontaire.html.twig" %#}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
{% endblock %}
