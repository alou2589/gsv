{% extends './admin/adminbase.html.twig' %}

{% block title %}Statut | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
              <div class="x_title">
                <h2>Statut</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a type="button" class="link" data-toggle="modal" data-target=".bs-example-modal-lg" class="text-decoration-none float-left m-1" title="Supprimer"> <i class="fas fa-trash-alt text-danger"></i> </a>
                        {% include "./admin/sv/delete.html.twig" %}
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_sv_edit', {'id': statut_volontaire.id}) }}"  class="text-decoration-none float-left m-1" title="Modifier"> <i class="fas fa-edit text-warning"></i> </a>
                    </li>
                    <li>
                        <a class="link" href="{{ path('app_admin_sv_index') }}" class="text-decoration-none float-left m-1" title="Accueil"><i class="fas fa-home text-primary"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <p><strong>Id</strong>: {{ statut_volontaire.id }}</p>
                                    </li>
                                    <li class="list-group-item">
                                        <p><strong>Volontaire</strong>: {{ statut_volontaire.volontaire.Prenom}} {{ statut_volontaire.volontaire.Nom }}</p>
                                    </li>
                                    <li class="list-group-item">
                                        <p><strong>Matricule</strong>: {{ statut_volontaire.matricule}}</p>
                                    </li>
                                    <li class="list-group-item">
                                        <p><strong>Date de recrutement</strong>: {{ statut_volontaire.dateRecrutement ? statut_volontaire.dateRecrutement|date('d-m-Y') : '' }}</p>
                                    </li>
                                </ul>   
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
    </div>
{% endblock %}
