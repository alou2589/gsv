
<div class="row">
    <div class="col-md-4 mx-auto">
        <h2>Nombre total de volontaires</h2>
        <h1>{{srcVolontaires|length}} </h1>
    </div>
    <div class="col-md-4 mx-auto">
        
    </div>
    <div class="col-md-4"></div>
</div>
<table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
          <th class="text-center">Prenom</th>
          <th class="text-center">Nom</th>
          <th class="text-center">Matricule</th>
          <th class="text-center">SDC</th>
          <th class="text-center">Information</th>
      </tr>
    </thead>
    <tbody>
          {% for service_departemental in service_regional.serviceDepartementals %}
                {% for affectation in service_departemental.affectations %}
            
                  <tr>
                      <td class="text-center">{{ affectation.volontaireStatut.volontaire.Prenom }}</td>
                      <td class="text-center">{{ affectation.volontaireStatut.volontaire.Nom }}</td>
                      <td class="text-center">{{ affectation.volontaireStatut.Matricule }}</td>
                      <td class="text-center">{{affectation.serviceDepartemental.nomSDC}}</td>
                      <td class="text-center">
                          <a href="{{ path('app_admin_affectation_show', {'id': affectation.id}) }}"><i class="fas fa-eye text-info" title="Détails"></i></a>
                      </td>
                  </tr>
                {% else %}
                  <tr>
                      <td class="text-center" colspan="6">Pas de données</td>
                  </tr>
                  
                {% endfor %}
            {% endfor %}    
    </tbody>
</table>
